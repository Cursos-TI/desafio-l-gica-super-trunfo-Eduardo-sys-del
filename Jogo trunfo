#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define NUM_CARTAS 5

typedef struct {
    char nome[30];
    int forca;
    int velocidade;
    int inteligencia;
} Carta;

void imprimirCarta(Carta c) {
    printf("\nCarta: %s\n", c.nome);
    printf("1 - Força: %d\n", c.forca);
    printf("2 - Velocidade: %d\n", c.velocidade);
    printf("3 - Inteligência: %d\n", c.inteligencia);
}

int comparar(Carta c1, Carta c2, int atributo) {
    switch(atributo) {
        case 1: return c1.forca - c2.forca;
        case 2: return c1.velocidade - c2.velocidade;
        case 3: return c1.inteligencia - c2.inteligencia;
        default: return 0;
    }
}

int main() {
    srand(time(NULL));

    Carta baralho[NUM_CARTAS] = {
        {"Dragão", 90, 60, 70},
        {"Fênix", 80, 75, 85},
        {"Troll", 95, 40, 30},
        {"Elfo", 60, 85, 90},
        {"Mago", 50, 55, 95}
    };

    int idxJogador = rand() % NUM_CARTAS;
    int idxCPU;
    do {
        idxCPU = rand() % NUM_CARTAS;
    } while (idxCPU == idxJogador); // Garante cartas diferentes

    Carta jogador = baralho[idxJogador];
    Carta cpu = baralho[idxCPU];

    printf("Sua carta:\n");
    imprimirCarta(jogador);

    int escolha;
    printf("\nEscolha um atributo para comparar (1-Força, 2-Velocidade, 3-Inteligência): ");
    scanf("%d", &escolha);

    printf("\nCarta do oponente:");
    imprimirCarta(cpu);

    int resultado = comparar(jogador, cpu, escolha);

    if (resultado > 0)
        printf("\nVocê venceu!\n");
    else if (resultado < 0)
        printf("\nVocê perdeu.\n");
    else
        printf("\nEmpate!\n");

    return 0;
}
